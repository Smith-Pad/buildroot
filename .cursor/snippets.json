{
  "snippets": {
    "package-mk": {
      "prefix": "br-package",
      "description": "Buildroot package makefile skeleton",
      "body": [
        "################################################################################",
        "#",
        "# ${1:PACKAGE_NAME}",
        "#",
        "################################################################################",
        "",
        "${1:PACKAGE_NAME}_VERSION = ${2:1.0.0}",
        "${1:PACKAGE_NAME}_SOURCE = ${3:package-name}-$(${1:PACKAGE_NAME}_VERSION).tar.gz",
        "${1:PACKAGE_NAME}_SITE = ${4:https://example.com/downloads}",
        "${1:PACKAGE_NAME}_LICENSE = ${5:MIT}",
        "${1:PACKAGE_NAME}_LICENSE_FILES = LICENSE",
        "",
        "define ${1:PACKAGE_NAME}_BUILD_CMDS",
        "\t$(MAKE) $(TARGET_CONFIGURE_OPTS) -C $(@D)",
        "endef",
        "",
        "define ${1:PACKAGE_NAME}_INSTALL_TARGET_CMDS",
        "\t$(MAKE) DESTDIR=$(TARGET_DIR) install -C $(@D)",
        "endef",
        "",
        "$(eval $(generic-package))"
      ]
    },
    "config-in": {
      "prefix": "br-config",
      "description": "Buildroot package Config.in entry",
      "body": [
        "config BR2_PACKAGE_${1:PACKAGE_NAME}",
        "\tbool \"${2:package-name}\"",
        "\thelp",
        "\t\t  ${3:Package description here.}",
        "\t\t  ",
        "\t\t  ${4:https://example.com/package-name}"
      ]
    },
    "patch-header": {
      "prefix": "br-patch",
      "description": "Patch file header template",
      "body": [
        "From: ${1:Your Name} <${2:your.email@example.com}>",
        "Date: ${3:$(date)}",
        "Subject: [PATCH] ${4:Brief description of the patch}",
        "",
        "---",
        " ${5:file.c} | 2 +-",
        " 1 file changed, 1 insertion(+), 1 deletion(-)",
        "",
        "diff --git a/${5:file.c} b/${5:file.c}",
        "index 1234567..abcdefg 100644",
        "--- a/${5:file.c}",
        "+++ b/${5:file.c}",
        "@@ -1,3 +1,3 @@",
        " // Original line",
        "-old line",
        "+new line",
        " // Another line",
        "--",
        "2.25.1"
      ]
    },
    "defconfig": {
      "prefix": "br-defconfig",
      "description": "Board defconfig template",
      "body": [
        "# Architecture",
        "BR2_arm=y",
        "BR2_cortex_a7=y",
        "",
        "# Toolchain",
        "BR2_TOOLCHAIN_EXTERNAL=y",
        "BR2_TOOLCHAIN_EXTERNAL_LINARO_ARM_GCC=y",
        "",
        "# System configuration",
        "BR2_TARGET_GENERIC_HOSTNAME=\"${1:board-name}\"",
        "BR2_TARGET_GENERIC_ISSUE=\"Welcome to ${1:board-name}\"",
        "",
        "# Kernel",
        "BR2_LINUX_KERNEL=y",
        "BR2_LINUX_KERNEL_CUSTOM_TARBALL=y",
        "BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION=\"$(call github,linux,linux,${2:v5.10})/linux-${2:v5.10}.tar.gz\"",
        "BR2_LINUX_KERNEL_DEFCONFIG=\"${3:defconfig}\"",
        "",
        "# Bootloader",
        "BR2_TARGET_UBOOT=y",
        "BR2_TARGET_UBOOT_CUSTOM_TARBALL=y",
        "BR2_TARGET_UBOOT_CUSTOM_TARBALL_LOCATION=\"$(call github,u-boot,u-boot,${4:v2021.01})/u-boot-${4:v2021.01}.tar.gz\"",
        "BR2_TARGET_UBOOT_BOARD_DEFCONFIG=\"${5:board_defconfig}\"",
        "",
        "# Filesystem",
        "BR2_TARGET_ROOTFS_EXT2=y",
        "BR2_TARGET_ROOTFS_EXT2_4=y",
        "BR2_TARGET_ROOTFS_EXT2_SIZE=\"120M\""
      ]
    },
    "hash-file": {
      "prefix": "br-hash",
      "description": "Package hash file template",
      "body": [
        "# Locally computed",
        "sha256  ${1:hash}  ${2:filename}",
        "# From https://example.com/downloads/${2:filename}.sha256"
      ]
    }
  }
}
